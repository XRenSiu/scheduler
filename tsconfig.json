{
  "compilerOptions": {
    "target": "es2015",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["**_deprecated_**"]
}
